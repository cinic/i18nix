{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2015",
    "module": "es2015",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "*.test.ts",
    "**/*.test.ts"
  ]
}
