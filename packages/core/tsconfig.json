{
  "compilerOptions": {
    "baseUrl": "./",
    "target": "es2015",
    "module": "es2015",
    "declaration": true,
    "declarationDir": "./dist",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "*.test.ts",
    "**/*.test.ts"
  ]
}
