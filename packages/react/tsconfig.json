{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "i18nix": [
        "../core/src/index"
      ]
    },
    "target": "es2015",
    "module": "es2015",
    "declaration": true,
    "declarationDir": "dist",
    "sourceMap": true,
    "outDir": "dist",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react"
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "*.test.ts",
    "**/*.test.ts"
  ]
}
