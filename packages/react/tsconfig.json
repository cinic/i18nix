{
  "compilerOptions": {
    "baseUrl": ".",
    "paths": {
      "i18nix": [
        "../core/src/index"
      ]
    },
    "target": "es2015",
    "module": "es2015",
    "sourceMap": true,
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "jsx": "react",
    "skipLibCheck": true,
  },
  "include": [
    "src/**/*"
  ],
  "exclude": [
    "node_modules",
    "*.test.ts*",
    "**/*.test.ts*"
  ]
}
