{
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "i18nix": [
        "../core/dist/index"
      ]
    },
    "target": "es2015",
    "module": "es2015",
    "allowJs": true,
    "jsx": "react",
    "sourceMap": true,
    "outDir": "./dist",
    "removeComments": true,
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src/**/*"
  ],
  "exclude": [
    "node_modules",
    "*.test.ts",
    "**/*.test.ts"
  ]
}
